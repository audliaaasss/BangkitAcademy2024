<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyBridgertonBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand Color -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand Color -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorSecondary</item>
    </style>

    <style name="Theme.MyBridgertonBook" parent="Base.Theme.MyBridgertonBook" />

    <style name="SplashScreenStyle" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/splash_brand_logo</item>
    </style>
</resources>